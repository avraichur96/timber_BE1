# Django Settings
SECRET_KEY=your-secret-key-here-very-long-and-random
DEBUG=True
ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
DB_NAME=timber_be_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Email Settings
# Option 1: Mailtrap (Free for development - recommended for testing)
# Method A: Token-based authentication (recommended for newer Mailtrap plans)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USE_TLS=True
EMAIL_HOST_USER=api
EMAIL_HOST_PASSWORD=your-mailtrap-api-token
DEFAULT_FROM_EMAIL=noreply@timber.app

# Method B: Username/Password authentication (legacy Mailtrap)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-mailtrap-username
# EMAIL_HOST_PASSWORD=your-mailtrap-password
# DEFAULT_FROM_EMAIL=noreply@timber.app

# Option 2: Brevo (Sendinblue) - Free tier: 300 emails/day
# EMAIL_HOST=smtp-relay.brevo.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-brevo-email@example.com
# EMAIL_HOST_PASSWORD=your-brevo-api-key
# DEFAULT_FROM_EMAIL=noreply@timber.app

# Option 3: Gmail (Use app password, less recommended for testing)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@timber.app

# Email Provider Selection
EMAIL_PROVIDER=mailtrap  # Options: mailtrap, brevo, gmail
MAILTRAP_AUTH_METHOD=token  # Options: token, password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Swagger Settings
ENABLE_SWAGGER=True

# Session Settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
